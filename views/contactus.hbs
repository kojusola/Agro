<div class="body">
    <img src="/img/Farms.png" id="signinimage" alt="">
    <div class="container-form-1 w-100">
    <div class="user-information border-round">
        <form action="/contactus" method="POST">
        <h3>Send Us A Message</h3><br>
             <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <label class="label">First name</label>
                        <input type="text" class="input--style-4" placeholder="First name" name="first_name" required>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <label class="label">Last name</label>
                        <input type="text" class="input--style-4" placeholder="Last name" name="last_name" required>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <label class="label">Email</label>
                        <input type="email" class="input--style-4" placeholder="Email" name="email" required>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <label class="label">Phone number</label>
                        <input type="tel" class="input--style-4" placeholder="Phone number" name="phone" required>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="input-group" style="margin: 0 4px">
                    <label class="label">Message</label>
                        <textarea class="input--style-4 w-100" rows="3" name="message"></textarea>
                </div>
            </div>
             <div class="">
                                    <button class="btn btn--blue btn-block" type="submit" style="background-color: #17a2b8;
    border-color: #17a2b8;">Submit</button>
                                </div>
            <br>
            <a href="/">Go Home</a>
        </form>
    </div>
    </div>
</div>